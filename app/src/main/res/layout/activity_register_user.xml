<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterUserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".RegisterUserActivity">

        <RadioGroup
            android:id="@+id/radiogrp"
            android:layout_width="323dp"
            android:layout_height="34dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="53dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioDriver"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:text="Driver"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/radioStudent"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:buttonTint="@color/colorPrimary"
                android:text="Student"
                android:textColor="@color/colorPrimary" />

        </RadioGroup>

        <EditText
            android:id="@+id/resName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Full Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resConfirmPass" />

        <EditText
            android:id="@+id/resPhone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Phone No."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resName" />

        <EditText
            android:id="@+id/resID"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Student ID"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radiogrp"
            tools:visibility="gone" />

        <EditText
            android:id="@+id/resEmail"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radiogrp" />

        <EditText
            android:id="@+id/resPass"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resEmail" />

        <EditText
            android:id="@+id/resConfirmPass"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resPass" />

        <Button
            android:id="@+id/resbutton"
            android:layout_width="312dp"
            android:layout_height="47dp"
            android:layout_marginTop="103dp"
            android:layout_marginBottom="80dp"
            android:background="@color/colorPrimary"
            android:text="Register"
            android:textColor="#F6F3F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resPhone" />

        <!--<TextView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<-"
            android:textColor="#3A3939"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="87dp" />-->

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="65dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>